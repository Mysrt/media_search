- model_class = Clip
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @clip.title
%p
  %strong= model_class.human_attribute_name(:path) + ':'
  %br
  = @clip.path


= link_to t('.back', :default => t("helpers.links.back")), clips_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_clip_path(@clip), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), clip_path(@clip), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
